<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium Automation Test Suite" parallel="tests" thread-count="2">
    
    <parameter name="browser" value="chrome"/>
    
    <test name="Smoke Test" preserve-order="true">
        <classes>
            <class name="seleniumAutomation.tests.SmokeTest"/>
        </classes>
    </test>
    
    <test name="Login Test" preserve-order="true">
        <classes>
            <class name="seleniumAutomation.tests.LoginTest"/>
        </classes>
    </test>
    
</suite>